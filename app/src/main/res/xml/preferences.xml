<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

        <CheckBoxPreference
            android:key="@string/pref_use_source_folders"
            android:title="Use source folders"
            android:defaultValue="false"/>
        <MultiSelectListPreference
            android:key="@string/pref_source_folders"
            android:title="Select source folders"
            android:dependency="@string/pref_use_source_folders"
            />

        <ListPreference
            android:key="@string/pref_themes"
            android:title="@string/themes"
            />

    <CheckBoxPreference
        android:key="@string/pref_pause_on_disconnect"
        android:title="Pause when headphone is disconnected"/>

    <CheckBoxPreference
        android:key="@string/pref_use_volume_as_navigation"
        android:title="Use volume buttons as navigation"
        />




</PreferenceScreen>